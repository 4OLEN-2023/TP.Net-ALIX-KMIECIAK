@model AddOrEditPlatformViewModel
@{
    ViewData["Title"] = "Add";
}

<form method="post" asp-action="AddOrEdit" asp-controller="Platform">
    <div asp-validation-summary="All"></div>
    <input asp-for="PlatformToAddOrEdit.Id" type="hidden" />
    <div class="form-group">
        <label asp-for="PlatformToAddOrEdit.Name"></label>
        <input asp-for="PlatformToAddOrEdit.Name" class="form-control" />
    </div>    
    <br />
    <div class="form-group">
        <button type="submit" class="form-control">Add</button>
    </div>
</form>
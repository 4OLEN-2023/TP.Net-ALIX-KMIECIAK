@model IEnumerable<MyVideoGames.Model.Game>

<div class="game-list">
    @foreach(var game in Model)
    {
        <div class="game-item">
            <h5 class="card-title">@game.Name</h5>
            <p class="card-text">@game.Id</p>
            <p class="card-text">@game.ReleaseDate</p>
            <p class="card-text">@game.PlayTime</p>
            <game-desc readonly="true">@game.Description</game-desc>
            <p class="card-text">@game.Platform.Name</p>
            <div class="col"><a asp-controller="Game" asp-action="AddOrEdit" asp-route-id="@game.Id">Modifier</a></div>
        </div>
        
    }
</div>  
@model AddGameViewModel

<form method="post" asp-action="Add" asp-controller="Game">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="GameToAdd.Id"></label>
        <input asp-for="GameToAdd.Id" class="form-control" />
        <span asp-validation-for="GameToAdd.Id"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAdd.Name"></label>
        <input asp-for="GameToAdd.Name" class="form-control" />
        <span asp-validation-for="GameToAdd.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAdd.PlayTime"></label>
        <input asp-for="GameToAdd.PlayTime" class="form-control" />
        <span asp-validation-for="GameToAdd.PlayTime"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAdd.Rating"></label>
        <input asp-for="GameToAdd.Rating" class="form-control" />
        <span asp-validation-for="GameToAdd.Rating"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAdd.RatingTop"></label>
        <input asp-for="GameToAdd.RatingTop" class="form-control" />
        <span asp-validation-for="GameToAdd.RatingTop"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAdd.ReleaseDate"></label>
        <input asp-for="GameToAdd.ReleaseDate" class="form-control" type="date"/>
        <span asp-validation-for="GameToAdd.ReleaseDate"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAdd.Slug"></label>
        <input asp-for="GameToAdd.Slug" class="form-control" />
        <span asp-validation-for="GameToAdd.Slug"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAdd.Description"></label>
        <input asp-for="GameToAdd.Description" class="form-control" />
        <span asp-validation-for="GameToAdd.Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="GameToAdd.Plateform.Name"></label>
        <select asp-for="GameToAdd.Plateform.Name" asp-items="@Model.PlatformsAvailable" class="form-control"></select>
        <span asp-validation-for="GameToAdd.Plateform.Name"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section scripts
{
    <partial name="_ValidationScriptsPartial" />
}
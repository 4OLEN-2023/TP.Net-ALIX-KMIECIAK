@using MyVideoGames.Model
@model Game

<div class="row">
    <div class="col">@Model.Id</div>
    <div class="col">@Model.Slug</div>
    <div class="col">@Model.Name</div>
    <div class="col">@Model.ReleaseDate</div>
    <div class="col">@Model.Rating / @Model.RatingTop</div>
    <div class="col">@Model.PlayTime</div>
    <div class="col"><game-desc readonly="true">@Model.Description</game-desc></div>
    <div class="col">@Model.Platform.Name</div><div class="col"><a asp-controller="Game" asp-action="AddOrEdit" asp-route-id="@Model.Id">Modifier</a></div>
</div>